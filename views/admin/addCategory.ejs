<!DOCTYPE html>
<html lang="en">
  <%- include ('adminHead')%>
<body class="g-sidenav-show   bg-gray-100">
    <!-- navbar -->
    <%- include ('adminHeader')%>
    <main class="main-content position-relative border-radius-lg ">
      <!-- Navbar -->
      <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl " id="navbarBlur" data-scroll="false">
        <div class="container-fluid py-1 px-3">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
              <li class="breadcrumb-item text-sm"><a class="opacity-5 text-white" href="/admin">หน้าแรก</a></li>
              <li class="breadcrumb-item text-sm text-white active" aria-current="page">เพิ่มหมวดหมู่สินค้า</li>
            </ol>
            <h6 class="font-weight-bolder text-white mb-0">เพิ่มหมวดหมู่สินค้า</h6>
          </nav>
          <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
            </div>
            <ul class="navbar-nav  justify-content-end">
              <li class="nav-item d-flex align-items-center">
                <a href="javascript:;" class="nav-link text-white font-weight-bold px-0">
                  <i class="fa fa-user me-sm-1"></i>
                  <span class="d-sm-inline d-none">Admin</span>
                </a>
              </li>
              <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
                <a href="javascript:;" class="nav-link text-white p-0" id="iconNavbarSidenav">
                  <div class="sidenav-toggler-inner">
                    <i class="sidenav-toggler-line bg-white"></i>
                    <i class="sidenav-toggler-line bg-white"></i>
                    <i class="sidenav-toggler-line bg-white"></i>
                  </div>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <div class="container-fluid py-4">
        <% if (messages.error) { %>
          <div class="alert alert-danger" role="alert"><%= messages.error %></div>
        <% } %>
        <% if (messages.success) { %>
          <div class="alert alert-success" role="alert"><%= messages.success %></div>
        <% } %>
        <div class="row">
          <div class="col-12">
            <div class="card mb-4">
              <div class="card-header pb-0">
                <h6>เพิ่มหมวดหมู่สินค้า</h6>
              </div>
      
              <form class="pb-4 mx-4" method="POST" action="/admin/add-category">
                <div class="form-group">
                  <label for="exampleFormControlInput1">หมวดหมู่สินค้า</label>
                  <input type="text" class="form-control" name="categoryName" autocomplete="false">
                </div>
                <input type="submit"  value="บันทึกข้อมูล" class="btn btn-success mt-4">
              </form>
            </div>  
          </div>
        </div>

        <div class="row">
          <div class="col-12">
            <div class="card mb-4">
              <div class="card-header pb-0">
                <h6>หมวดหมู่สินค้า</h6>
              </div>
              <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                  <% if (data) { %>
                    <table class="table align-items-center mb-0">
                      <thead>
                        <tr>
                          <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">NO.</th>
                          <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">ชื่อหมวดหมู่สินค้า</th>
                          <th class="text-secondary opacity-7"></th>
                        </tr>
                      </thead>
                      <tbody>
                        <% data.forEach((item) => {%>
                        <tr>
                          <td>
                              <p class="text-xs font-weight-bold mb-0 px-3"># <%= item.id %></p>
                          </td>
                          <td>
                              <div class="d-flex px-0 py-3">
                                  <div class="d-flex flex-column justify-content-center">
                                    <h6 class="mb-0 text-sm"><%= item.name %></h6>
                                  </div>
                                </div>
                          </td>
                        
                          <td class="text-center">
                            <a href="/admin/add-category/edit/?id=<%= item.id %>" class="text-white font-weight-bold text-xs btn btn-primary my-2">
                              Edit
                            </a>
                          </td>
                        </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>




    <%- include ('siteAdminScript')%>

  


</body>
</html>